<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tanfulun.test_qiniu.MainActivity">

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/carame"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:foreground="@drawable/icon_camera"
            android:background="@drawable/shape_view_cart"
            />

        <Button
            android:id="@+id/select_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/carame"
            android:foreground="@drawable/icon_album" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/image_preview_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_rl"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/image_preview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="图片预览"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/avatar_crop"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/results_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/image_preview_rl"
        android:background="#cccccc"
        >

        <TextView
            android:id="@+id/results_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#cccccc"
            android:gravity="center"
            android:text="拍摄或上传图片"
            android:visibility="visible"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/rr1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:visibility="invisible"

            >

            <TextView
                android:id="@+id/haiguan_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:background="#669933"
                android:gravity="center"
                android:text="        物品类别        "
                android:visibility="invisible"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/results_haiguan_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/haiguan_class"
                android:layout_alignEnd="@+id/haiguan_class"
                android:layout_alignStart="@+id/haiguan_class"

                android:layout_gravity="center"
                android:background="#669933"
                android:gravity="center"
                android:text="#1"
                android:textSize="15dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rr1"
            android:visibility="invisible"

            >
            <TextView
                android:id="@+id/tax_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#99cc66"
                android:gravity="center"
                android:text="       税号       "
                android:textStyle="bold"
                android:visibility="invisible"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/results_tax_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tax_id"
                android:layout_alignStart="@+id/tax_id"
                android:layout_alignEnd="@+id/tax_id"
                android:layout_alignParentBottom="true"

                android:layout_gravity="center"
                android:background="#99cc66"
                android:gravity="center"
                android:text="#2"
                android:visibility="invisible"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rr2"
            android:visibility="invisible"

            >

            <TextView
                android:id="@+id/tax_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ccff99"
                android:gravity="center"
                android:text=" 税率 "
                android:visibility="invisible"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/results_tax_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tax_rate"
                android:layout_alignStart="@+id/tax_rate"
                android:layout_alignEnd="@+id/tax_rate"
                android:layout_alignParentBottom="true"

                android:layout_gravity="center"
                android:background="#ccff99"
                android:gravity="center"
                android:text="#3"
                android:visibility="invisible"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rr3"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            >

            <TextView
                android:id="@+id/recognition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ccffcc"
                android:gravity="center"
                android:text="识别结果(置信度)"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/results_recognition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_below="@+id/recognition"
                android:layout_alignStart="@+id/recognition"
                android:layout_alignEnd="@+id/recognition"
                android:layout_alignParentBottom="true"

                android:background="#ccffcc"
                android:gravity="center"
                android:text="#4"
                android:visibility="invisible"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
